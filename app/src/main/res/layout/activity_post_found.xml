<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atfalna.atfalna_app1.Post_found"
    android:background="#fff">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:id="@+id/lin_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rel_000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_logo_f"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/logo_atfalna" />

                    <ImageView
                        android:id="@+id/img_date_p_f"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tv_user_name_p_f"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@id/img_logo_f"
                        android:src="@drawable/ic_date_p1" />

                    <TextView
                        android:id="@+id/tv_user_name_p_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/img_logo_f"
                        android:text="user name"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_date_p_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_user_name_p_f"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@id/img_date_p_f"
                        android:text="20/1/2018"
                        android:textColor="#c6000000"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_time_p_f"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/tv_user_name_p_f"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@id/tv_date_p_f"
                        android:src="@drawable/ic_time_p" />

                    <TextView
                        android:id="@+id/tv_time_p_f"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@id/tv_user_name_p_f"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_toLeftOf="@id/img_time_p_f"
                        android:src="@drawable/ic_time_p"
                        android:text="10:30 pm"
                        android:textColor="#c6000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_code_p_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_data_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rel_000"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/img_p_f"
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/image_p" />

                    <RelativeLayout
                        android:id="@+id/r2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/img_p_f"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/style_rel_p_f"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ic_date_f"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_date_2" />

                        <TextView
                            android:id="@+id/title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/ic_date_f"
                            android:text="تاريخ رؤيت الحالة : "
                            android:textColor="#c6000000" />

                        <TextView
                            android:id="@+id/tv_day_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/title1"
                            android:text="20"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_month_m"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/tv_day_m"
                            android:text="يناير"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_year_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/tv_month_m"
                            android:text="2018"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/r2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/style_rel_p_f"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/img_gender_f"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_gender_p" />

                        <TextView
                            android:id="@+id/title5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/img_gender_f"
                            android:text="نوع الحالة :  "
                            android:textColor="#c6000000" />

                        <TextView
                            android:id="@+id/tv_gender_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/title5"
                            android:maxLength="4"
                            android:text="ذكر"
                            android:textColor="#000"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img_city"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@id/tv_gender_f"
                            android:src="@drawable/ic_city_p" />

                        <TextView
                            android:id="@+id/tv_title_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_toLeftOf="@id/img_city"
                            android:text="المحافظة : "
                            android:textColor="#c6000000" />

                        <TextView
                            android:id="@+id/tv_city_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dp"
                            android:layout_toLeftOf="@id/tv_title_city"
                            android:text="الجيزة"
                            android:textColor="#000"
                            android:textStyle="bold" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/r3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/style_rel_p_f">

                        <ImageView
                            android:id="@+id/ic_map_f"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_place_p" />


                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/ic_map_f"
                            android:text="مكان رؤيت الحالة :  "
                            android:textColor="#c6000000" />

                        <TextView
                            android:id="@+id/tv_place_f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"
                            android:layout_toLeftOf="@id/title2"
                            android:gravity="right"
                            android:maxLines="2"
                            android:text="موجود في ميدان الجيزة عن محل باتا"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@+id/r4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/style_rel_p_f">

                        <ImageView
                            android:id="@+id/img_phone_f"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_phone_p" />


                        <TextView
                            android:id="@+id/title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/img_phone_f"
                            android:text="تليفون اللى شاف الحالة : "
                            android:textColor="#c6000000" />

                        <TextView
                            android:id="@+id/tv_phone_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/title4"
                            android:layout_alignBottom="@+id/title4"
                            android:layout_toStartOf="@+id/title4"
                            android:maxLength="11"
                            android:text="01118502684"
                            android:textColor="#000"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/r6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/r5"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/style_rel_p_f"
                        android:paddingLeft="5dp">

                        <ImageView
                            android:id="@+id/img_info_f"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_note_p" />

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@id/img_info_f"
                            android:text="معلومات
 الحالة :  "
                            android:textColor="#c6000000" />

                        <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/title3">

                            <TextView
                                android:id="@+id/tv_info_f"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center"
                                android:maxLines="5"
                                android:padding="2dp"
                                android:text="الواد قاعد في الشارع و بشوف كتير جدا هناك تقربيا كل يوم ...الواد قاعد في الشارع و بشوف كتير جدا هناك تقربيا كل يوم ...الواد قاعد في الشارع و بشوف كتير جدا هناك تقربيا كل يوم ....الواد قاعد في الشارع و بشوف كتير جدا هناك تقربيا كل يوم ...الواد قاعد في الشارع و بشوف كتير جدا هناك تقربيا كل يوم  "
                                android:textColor="#000"
                                android:textStyle="bold" />

                        </ScrollView>

                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/r4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/style_rel_p_f">

                    <ImageView
                        android:id="@+id/img_map"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_place_p" />

                    <TextView
                        android:id="@+id/title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@id/img_map"
                        android:text="مكان الحالة على الخريطة : "
                        android:textColor="#c6000000" />

                    <TextView
                        android:id="@+id/tv_place_map1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/title6"
                        android:maxLines="1"
                        android:text="لم يتم التحديد"
                        android:textColor="#f12020"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/r7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_all"
                android:layout_marginTop="10dp"
                android:background="@drawable/style_rel_p_f"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:gravity="center"-->
                        <!--android:padding="1dp">-->

                        <!--<ImageView-->
                            <!--android:layout_width="40dp"-->
                            <!--android:layout_height="25dp"-->
                            <!--android:src="@drawable/ic_share_p" />-->

                    <!--</LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="btn_show_comm_f_in_alert"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/tv_total_comm_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:text="0" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_comment_p" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_like_f"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/tv_total_like_f"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="4"
                            android:text="0" />

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_like1"
                            android:id="@+id/img_like_f_1"
                            android:onClick="btn_add_like_f"/>


                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_comment_p_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="5dp"
                    android:hint="كتابة تعليق"
                    android:maxLines="3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="#000"
                    android:textColorHint="#000" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:onClick="btn_send_comment_p_f"
                    android:text="ارسال التعليق"
                    android:textColor="#000"
                    android:background="@drawable/style_btn_comment"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>

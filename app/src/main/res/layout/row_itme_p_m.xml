<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="@color/colorWhite">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:padding="2dp">

            <ImageView
                android:id="@+id/img_m_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/select_image2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_code_post_m_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo_atfalna"
                    app:civ_border_color="#6c6e80"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tv_user_name_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="22dp"
                    android:layout_toLeftOf="@id/img_user"
                    android:text="user_name"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ic_date"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/img_user"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_date_2" />

                <TextView
                    android:id="@+id/tv_date_m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_user"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@id/ic_date"
                    android:text="20/02/2018"
                    android:textColor="#eb000000" />


                <ImageView

                    android:id="@+id/ic_map"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ic_date"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_city_p" />

                <TextView
                    android:id="@+id/tv_city_m_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_date"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@id/ic_date"
                    android:text="القاهرة"
                    android:textColor="#eb000000" />

                <ImageView
                    android:id="@+id/ic_name_case"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ic_map"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_name_case" />

                <TextView
                    android:id="@+id/tv_name_case_m_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_map"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@id/ic_name_case"
                    android:maxLines="1"
                    android:text="محمد ممدوح"
                    android:textColor="#eb000000" />

                <ImageView
                    android:id="@+id/ic_money"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ic_name_case"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_money" />

                <TextView
                    android:id="@+id/tv_bonus_m_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_name_case"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@id/ic_money"
                    android:text="1000"
                    android:textColor="#eb000000" />


                <ImageView
                    android:id="@+id/ic_phone"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/ic_money"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_phone_p" />

                <TextView
                    android:id="@+id/tv_phone_m_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ic_money"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_toLeftOf="@id/ic_phone"
                    android:text="01118502684"
                    android:textColor="#eb000000" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>


